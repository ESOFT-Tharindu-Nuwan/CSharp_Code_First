@model IEnumerable<Book>

<div class="d-flex justify-content-between align-items-center">
	<h1>Book List</h1>
	<a asp-controller="Book" asp-action="Create" class="btn btn-primary">Create Book</a>
</div>

<table class="table">
	<thead>
		<tr class="table-dark">
			<th>Title</th>
			<th>Author</th>
			<th class="text-center">Published Date</th>
			<th class="text-center">Released Date</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var book in Model)
		{
			<tr class="table-secondary">
				<td>@book.Name</td>
				<td>@book.Author</td>
				<td class="text-center">@book.DateOfPublish.ToShortDateString()</td>
				@* <td class="text-center">@book.DateOfRelease</td> *@
				<td class="text-center">
					@(book.DateOfRelease.HasValue ? book.DateOfRelease.Value.ToShortDateString() : "No Release Date")
				</td>
			</tr>
		}
	</tbody>
</table>
